@model DBR.Application.Models.PedidoViewModel

<article class="card-body border-top">
    <dl class="row">
        @*{
            if (Model.VoucherUtilizado)
            {
                <dt class="col-sm-10">Subtotal: <span class="float-right text-muted">@Model.PedidoItems.Sum(i => i.Quantidade) itens</span></dt>
                <dd class="col-sm-2 text-right">
                    <strong>@Model.ValorTotal</strong>
                </dd>

                @*<dt class="col-sm-10">Desconto: <span class="float-right text-muted">@Model.VoucherCodigo</span></dt>
                <dd class="col-sm-2 text-danger text-right">
                    <strong>@Model.Desconto</strong>
                </dd>
            }
        }*@
        <dt class="col-sm-10">Total:</dt>
        <dd class="col-sm-2 text-right">
            <strong class="h5 text-dark">@Model.ValorTotal</strong>
        </dd>
    </dl>
</article>